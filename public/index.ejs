<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products 4stiny</title>
    <link rel="stylesheet" href="./css/bootstrap.min.css">
    <link rel="stylesheet" href="css/style.css">
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="col-12 mb-5">
                <h1 class="text-center text-white m-5">Add product</h1>
                <form method="post" action="<%= isChange ? '/change' : '/add' %>">
                    <div class="row form">
                        <div class="col-xxl-2 col-xl-4 col-md-6 col-sm-12 mb-3">
                            <label for="text-center">Name</label>
                            <input required autocomplete="off" type="text" name="name" class="form__input" value="<%= isChange ? product.name : '' %>">
                        </div>
                        <div class="col-xxl-2 col-xl-4 col-md-6 col-sm-12 mb-3">
                            <label for="text-center">Producer</label>
                            <input required autocomplete="off" type="text" name="producer" class="form__input" value="<%= isChange ? product.producer : '' %>">
                        </div>
                        <div class="col-xxl-2 col-xl-4 col-md-6 col-sm-12 mb-3">
                            <label for="text-center">Article</label>
                            <input required autocomplete="off" type="text" name="article" class="form__input" value="<%= isChange ? product.article : '' %>">
                        </div>
                        <div class="col-xxl-2 col-xl-4 col-md-6 col-sm-12 mb-3">
                            <label for="text-center">Availability</label>
                            <input required autocomplete="off" type="number" name="availability" class="form__input" value="<%= isChange ? product.availability : '' %>">
                        </div>
                        <div class="col-xxl-2 col-xl-4 col-md-6 col-sm-12 mb-3">
                            <label for="text-center">Price</label>
                            <input required autocomplete="off" type="number" name="price" class="form__input" value="<%= isChange ? product.price : '' %>">
                        </div>
                        <% if(isChange) { %>
                            <input type="hidden" value="<%= id %>" name="id">
                        <% } %>
                        <div class="col-xxl-2 col-xl-4 col-md-6 col-sm-12 mb-3">
                            <button type="submit" class="form__btn"><%= isChange ? 'Change' : 'Add' %></button>
                        </div>
                    </div>
                </form>
            </div>
            <table class="table table-dark table-striped">
                <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Producer</th>
                        <th scope="col">Article</th>
                        <th scope="col">Availability</th>
                        <th scope="col">Price</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if(products.length > 0) { %>
                        <% products.forEach(item => { %>
                            <form method="post" action="/edit">
                                <tr>
                                    <td><%= item.name %></td>
                                    <td><%= item.producer %></td>
                                    <td><%= item.article %></td>
                                    <td><%= item.availability %></td>
                                    <td><%= item.price %></td>
                                    <td class="table__actions">
                                        <input type="hidden" value="<%= item._id %>" name="id">
                                        <button type="submit" name="action" value="change">
                                            <i class="far fa-edit table__btn-change"></i>
                                        </button>
                                        <button type="submit" name="action" value="remove">
                                            <i class="far fa-trash-alt dange table__btn-remove"></i>
                                        </button>
                                    </td>
                                </tr>
                            </form>
                        <% }) %>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</body>

</html>